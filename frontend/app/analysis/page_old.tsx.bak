'use client';

import React, { useState } from 'react';
import Link from 'next/link';

export default function AnalysisPage() {
  const [activeTab, setActiveTab] = useState<'voice' | 'video' | 'document' | 'liveness' | 'scam'>('video');
  const [file, setFile] = useState<File | null>(null);
  const [analyzing, setAnalyzing] = useState(false);
  const [result, setResult] = useState<any>(null);
  const [dragActive, setDragActive] = useState(false);

  const tabs = [
    { key: 'voice', label: 'Voice Analysis', icon: 'üé§', desc: 'Detect synthetic voice', gradient: 'from-blue-500 to-cyan-500' },
    { key: 'video', label: 'Video Analysis', icon: 'üé•', desc: 'Face swap detection', gradient: 'from-purple-500 to-pink-500' },
    { key: 'document', label: 'Document Check', icon: 'üìÑ', desc: 'Verify ID documents', gradient: 'from-green-500 to-emerald-500' },
    { key: 'liveness', label: 'Liveness Test', icon: 'üëÅÔ∏è', desc: 'Real person check', gradient: 'from-orange-500 to-red-500' },
    { key: 'scam', label: 'Scam Call', icon: 'üìû', desc: 'Fraud call analysis', gradient: 'from-yellow-500 to-orange-500' }
  ];

  const handleFileUpload = (e: React.ChangeEvent<HTMLInputElement>) => {
    if (e.target.files && e.target.files[0]) {
      setFile(e.target.files[0]);
      setResult(null);
    }
  };

  const handleDrag = (e: React.DragEvent) => {
    e.preventDefault();
    e.stopPropagation();
    if (e.type === "dragenter" || e.type === "dragover") {
      setDragActive(true);
    } else if (e.type === "dragleave") {
      setDragActive(false);
    }
  };

  const handleDrop = (e: React.DragEvent) => {
    e.preventDefault();
    e.stopPropagation();
    setDragActive(false);
    
    if (e.dataTransfer.files && e.dataTransfer.files[0]) {
      setFile(e.dataTransfer.files[0]);
      setResult(null);
    }
  };

  const handleAnalyze = async () => {
    if (!file) return;
    
    setAnalyzing(true);
    
    // Simulate API call
    setTimeout(() => {
      const mockResult = {
        isDeepfake: Math.random() > 0.5,
        confidence: 85 + Math.random() * 15,
        engines: [
          { name: 'Primary Detection', score: 88 + Math.random() * 10, status: 'completed' },
          { name: 'GAN Fingerprint', score: 90 + Math.random() * 10, status: 'completed' },
          { name: 'Temporal Analysis', score: 85 + Math.random() * 10, status: 'completed' },
          { name: 'Audio Forensics', score: 87 + Math.random() * 10, status: 'completed' },
          { name: 'Facial Landmarks', score: 92 + Math.random() * 8, status: 'completed' },
          { name: 'Frequency Analysis', score: 89 + Math.random() * 10, status: 'completed' }
        ],
        metadata: {
          duration: '2:34',
          resolution: '1920x1080',
          codec: 'H.264',
          fps: 30
        },
        threats: [
          'Face manipulation detected',
          'Audio-visual sync anomaly',
          'GAN artifacts found'
        ]
      };
      
      setResult(mockResult);
      setAnalyzing(false);
    }, 4000);
  };

  const currentTab = tabs.find(t => t.key === activeTab);

  return (
    <div className="min-h-screen bg-gradient-to-br from-slate-50 via-blue-50 to-indigo-100">
      {/* Enhanced Header with Glass Effect */}
      <nav className="sticky top-0 z-50 bg-white/70 backdrop-blur-2xl border-b border-white/20 shadow-xl">
        <div className="container mx-auto px-6 py-4">
          <div className="flex items-center justify-between">
            <div className="flex items-center gap-4 animate-fade-in">
              <div className="relative">
                <div className="absolute inset-0 bg-gradient-to-br from-blue-600 to-purple-600 rounded-2xl blur-lg opacity-75"></div>
                <div className="relative w-14 h-14 bg-gradient-to-br from-blue-600 via-indigo-600 to-purple-600 rounded-2xl flex items-center justify-center shadow-2xl transform hover:rotate-12 transition-transform">
                  <span className="text-3xl">üî¨</span>
                </div>
              </div>
              <div>
                <h1 className="text-3xl font-black bg-gradient-to-r from-blue-600 via-indigo-600 to-purple-600 bg-clip-text text-transparent">
                  AI Analysis Lab
                </h1>
                <p className="text-sm text-indigo-600 font-bold flex items-center gap-2">
                  <span className="w-2 h-2 bg-green-500 rounded-full animate-pulse"></span>
                  6 Engines Active ‚Ä¢ Real-time Detection
                </p>
              </div>
            </div>
            <Link 
              href="/dashboard" 
              className="group flex items-center gap-2 px-6 py-3 bg-gradient-to-r from-gray-900 to-gray-700 text-white rounded-xl hover:shadow-2xl transition-all duration-300 transform hover:scale-105 font-bold"
            >
              <span className="group-hover:-translate-x-1 transition-transform">‚Üê</span>
              Dashboard
            </Link>
          </div>
        </div>
      </nav>

      <div className="container mx-auto px-6 py-12">
        {/* Enhanced Tabs with Beautiful Hover Effects */}
        <div className="grid grid-cols-2 md:grid-cols-5 gap-4 mb-12 animate-fade-in-up">
          {tabs.map((tab, idx) => (
            <button
              key={tab.key}
              onClick={() => {
                setActiveTab(tab.key as any);
                setFile(null);
                setResult(null);
              }}
              style={{ animationDelay: `${idx * 100}ms` }}
              className={`group relative p-6 rounded-2xl transition-all duration-300 transform hover:scale-105 animate-fade-in-up ${
                activeTab === tab.key
                  ? `bg-gradient-to-br ${tab.gradient} text-white shadow-2xl`
                  : 'bg-white/80 backdrop-blur-sm text-gray-700 shadow-lg hover:shadow-2xl border border-gray-100'
              }`}
            >
              {activeTab === tab.key && (
                <div className="absolute inset-0 bg-gradient-to-br from-white/20 to-transparent rounded-2xl"></div>
              )}
              <div className="relative">
                <div className={`text-4xl mb-3 transform transition-transform ${
                  activeTab === tab.key ? 'scale-110' : 'group-hover:scale-125'
                }`}>
                  {tab.icon}
                </div>
                <div className={`font-bold text-sm mb-1 ${activeTab === tab.key ? 'text-white' : 'text-gray-900'}`}>
                  {tab.label}
                </div>
                <div className={`text-xs ${activeTab === tab.key ? 'text-white/90' : 'text-gray-500'}`}>
                  {tab.desc}
                </div>
              </div>
            </button>
          ))}
        </div>

        <div className="grid lg:grid-cols-2 gap-8">
          {/* Left Panel - Enhanced Upload Area */}
          <div className="space-y-6 animate-fade-in-up animation-delay-200">
            <div className="bg-white/80 backdrop-blur-xl rounded-3xl shadow-2xl p-8 border border-white/20">
              <div className="flex items-center gap-3 mb-6">
                <div className={`w-12 h-12 bg-gradient-to-br ${currentTab?.gradient} rounded-xl flex items-center justify-center text-2xl shadow-lg`}>
                  {currentTab?.icon}
                </div>
                <div>
                  <h2 className="text-2xl font-black text-gray-900">{currentTab?.label}</h2>
                  <p className="text-sm text-gray-600 font-semibold">{currentTab?.desc}</p>
                </div>
              </div>
            >
              <div className="text-4xl mb-2">{tab.icon}</div>
              <div className="font-bold text-sm mb-1">{tab.label}</div>
              <div className={`text-xs ${activeTab === tab.key ? 'text-blue-100' : 'text-gray-500'}`}>
                {tab.desc}
              </div>
            </button>
          ))}
        </div>

        <div className="grid grid-cols-1 lg:grid-cols-3 gap-8">
          {/* Upload Section */}
          <div className="lg:col-span-1">
            <div className="bg-white rounded-3xl shadow-2xl p-8 border-2 border-indigo-100">
              <h2 className="text-2xl font-black text-gray-900 mb-6">Upload Content</h2>
              
              <div className="border-4 border-dashed border-indigo-300 rounded-2xl p-8 bg-indigo-50 hover:bg-indigo-100 transition cursor-pointer mb-6">
                <input
                  type="file"
                  accept={
                    activeTab === 'voice' ? 'audio/*' :
                    activeTab === 'video' || activeTab === 'liveness' ? 'video/*' :
                    'image/*,.pdf'
                  }
                  onChange={handleFileUpload}
                  className="hidden"
                  id="file-upload"
                />
                <label htmlFor="file-upload" className="cursor-pointer flex flex-col items-center">
                  <div className="text-6xl mb-4">
                    {activeTab === 'voice' && 'üé§'}
                    {activeTab === 'video' && 'üé•'}
                    {activeTab === 'document' && 'üìÑ'}
                    {activeTab === 'liveness' && 'üëÅÔ∏è'}
                    {activeTab === 'scam' && 'üìû'}
                  </div>
                  {file ? (
                    <div className="text-center">
                      <div className="text-lg font-bold text-indigo-900">‚úì {file.name}</div>
                      <div className="text-sm text-indigo-600">{(file.size / 1024 / 1024).toFixed(2)} MB</div>
                    </div>
                  ) : (
                    <div className="text-center">
                      <div className="text-lg font-bold text-indigo-900">Click to Upload</div>
                      <div className="text-sm text-indigo-600">
                        {activeTab === 'voice' && 'Audio file (MP3, WAV, AAC)'}
                        {activeTab === 'video' && 'Video file (MP4, AVI, MOV)'}
                        {activeTab === 'document' && 'Image or PDF'}
                        {activeTab === 'liveness' && 'Video of yourself'}
                        {activeTab === 'scam' && 'Call recording'}
                      </div>
                    </div>
                  )}
                </label>
              </div>

              <button
                onClick={handleAnalyze}
                disabled={!file || analyzing}
                className="w-full px-8 py-4 bg-gradient-to-r from-blue-600 to-purple-600 text-white rounded-2xl text-lg font-black hover:shadow-2xl hover:shadow-blue-500/50 transition-all transform hover:scale-105 disabled:opacity-50 disabled:cursor-not-allowed disabled:transform-none"
              >
                {analyzing ? 'Analyzing...' : 'Start Analysis'}
              </button>

              {file && !analyzing && !result && (
                <div className="mt-6 p-4 bg-yellow-50 rounded-xl border-2 border-yellow-300">
                  <div className="flex items-start gap-3">
                    <span className="text-2xl">üí°</span>
                    <div className="text-sm text-gray-700">
                      <p className="font-bold mb-1">Ready to analyze!</p>
                      <p>Our 6 AI engines will process your content in seconds.</p>
                    </div>
                  </div>
                </div>
              )}
            </div>
          </div>

          {/* Results Section */}
          <div className="lg:col-span-2">
            <div className="bg-white rounded-3xl shadow-2xl p-8 border-2 border-purple-100">
              <h2 className="text-2xl font-black text-gray-900 mb-6">Analysis Results</h2>

              {!analyzing && !result && (
                <div className="text-center py-20">
                  <div className="text-8xl mb-6 opacity-20">üî¨</div>
                  <p className="text-xl font-bold text-gray-400">Upload a file to start analysis</p>
                </div>
              )}

              {analyzing && (
                <div className="text-center py-12">
                  <div className="text-8xl mb-6 animate-pulse">‚ö°</div>
                  <div className="text-2xl font-bold text-gray-900 mb-4">Analyzing Content...</div>
                  <div className="max-w-md mx-auto mb-8">
                    <div className="bg-gray-200 rounded-full h-4 overflow-hidden">
                      <div className="bg-gradient-to-r from-blue-600 to-purple-600 h-4 rounded-full animate-pulse" style={{width: '70%'}}></div>
                    </div>
                  </div>
                  <div className="space-y-2 text-sm text-gray-600">
                    <p>‚úì Uploading to secure servers...</p>
                    <p>‚úì Running AI detection engines...</p>
                    <p>‚è≥ Analyzing patterns and anomalies...</p>
                  </div>
                </div>
              )}

              {result && (
                <div className="space-y-6">
                  {/* Main Result */}
                  <div className={`p-8 rounded-2xl text-center border-4 ${
                    result.isDeepfake 
                      ? 'bg-red-100 border-red-500' 
                      : 'bg-green-100 border-green-500'
                  }`}>
                    <div className="text-6xl mb-4">{result.isDeepfake ? 'üö®' : '‚úÖ'}</div>
                    <div className="text-3xl font-black mb-2">
                      {result.isDeepfake ? 'DEEPFAKE DETECTED' : 'AUTHENTIC CONTENT'}
                    </div>
                    <div className="text-xl font-bold text-gray-700">
                      Confidence: {result.confidence.toFixed(1)}%
                    </div>
                  </div>

                  {/* Engine Results */}
                  <div>
                    <h3 className="text-xl font-bold text-gray-900 mb-4">Detection Engines:</h3>
                    <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
                      {result.engines.map((engine: any, idx: number) => (
                        <div key={idx} className="p-4 bg-gradient-to-br from-gray-50 to-gray-100 rounded-xl border-2 border-gray-200 hover:shadow-lg transition">
                          <div className="flex items-center justify-between mb-2">
                            <span className="font-bold text-gray-900">{engine.name}</span>
                            <span className="text-xs px-2 py-1 bg-green-500 text-white rounded-full font-bold">
                              {engine.status.toUpperCase()}
                            </span>
                          </div>
                          <div className="flex items-center gap-3">
                            <div className="flex-1 bg-gray-200 rounded-full h-2 overflow-hidden">
                              <div 
                                className="bg-gradient-to-r from-blue-600 to-purple-600 h-2 rounded-full"
                                style={{width: `${engine.score}%`}}
                              ></div>
                            </div>
                            <span className="text-lg font-black text-indigo-600">{engine.score.toFixed(1)}%</span>
                          </div>
                        </div>
                      ))}
                    </div>
                  </div>

                  {/* Threats */}
                  {result.threats && result.threats.length > 0 && (
                    <div>
                      <h3 className="text-xl font-bold text-gray-900 mb-4">Threats Detected:</h3>
                      <div className="space-y-2">
                        {result.threats.map((threat: string, idx: number) => (
                          <div key={idx} className="flex items-center gap-3 p-3 bg-red-50 rounded-xl border border-red-200">
                            <span className="text-xl">‚ö†Ô∏è</span>
                            <span className="font-semibold text-gray-800">{threat}</span>
                          </div>
                        ))}
                      </div>
                    </div>
                  )}

                  {/* Metadata */}
                  <div>
                    <h3 className="text-xl font-bold text-gray-900 mb-4">Technical Details:</h3>
                    <div className="grid grid-cols-2 gap-4">
                      {Object.entries(result.metadata).map(([key, value]) => (
                        <div key={key} className="p-4 bg-blue-50 rounded-xl border border-blue-200">
                          <div className="text-sm text-blue-600 font-semibold capitalize">{key}</div>
                          <div className="text-lg font-bold text-blue-900">{value as string}</div>
                        </div>
                      ))}
                    </div>
                  </div>

                  {/* Actions */}
                  <div className="flex gap-4">
                    <Link
                      href="/victim"
                      className="flex-1 px-6 py-4 bg-gradient-to-r from-red-600 to-orange-600 text-white rounded-2xl text-center font-bold hover:shadow-2xl transition"
                    >
                      Report & Takedown
                    </Link>
                    <button
                      onClick={() => {
                        setFile(null);
                        setResult(null);
                      }}
                      className="flex-1 px-6 py-4 bg-gray-200 text-gray-800 rounded-2xl font-bold hover:bg-gray-300 transition"
                    >
                      New Analysis
                    </button>
                  </div>
                </div>
              )}
            </div>
          </div>
        </div>
      </div>
    </div>
  );
}
