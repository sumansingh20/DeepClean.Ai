{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "frontend/$1"
    }
  ],
  "env": {
    "NEXT_PUBLIC_API_URL": "https://your-backend-api.vercel.app/api/v1",
    "NEXT_PUBLIC_WS_URL": "wss://your-backend-api.vercel.app/ws"
  }
}
